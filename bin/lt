#!/bin/sh
#
# Logs time

source $DOTFILES_ROOT/.setup/functions.sh

set -e

if [ $# == 2 ] || [ $# == 3 ]; then
	if [ $# == 3 ]; then
		CLIENTID=$1
		CLIENTNAME=$2
		MINUTES=$3
	else
		CLIENTID=''
		CLIENTNAME=$1
		MINUTES=$2
	fi
	plus "Logging time:"
	echo $CLIENTID,$CLIENTNAME,$MINUTES,$(date +"%T"),$(date +"%F") >> ~/Google\ Drive/Work/hours.csv
else
	fail 'Wrong arguments'
	exit 1
fi

exit 0
